        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
    Title="Карта АЗС" Height="600" Width="800">


    <Grid>
        <WindowsFormsHost>
            <wf:WebBrowser x:Name="WebBrowserControl"
